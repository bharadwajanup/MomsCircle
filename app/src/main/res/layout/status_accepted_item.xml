<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_margin="30px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350px"
            android:layout_height="match_parent"
            android:id="@+id/container1"
            android:weightSum="1"
            android:layout_marginRight="10px">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_weight="1.26">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Date"
                    android:layout_marginLeft="25px"
                    android:id="@+id/chore_date" />

                <Space
                    android:layout_width="114dp"
                    android:layout_height="90px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/chore_time"
                    android:layout_marginLeft="25px"
                    android:textColor="#9e9e9e"
                    android:textColorHighlight="#9e9e9e" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/chore_name"
                    android:layout_marginLeft="25px"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:id="@+id/container2"
            android:layout_toRightOf="@id/container1"
            android:layout_marginRight="10px">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:id="@+id/support_image"
                android:adjustViewBounds="false"
                android:layout_centerVertical="true"
                android:src="@mipmap/contact_image"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="330px"
            android:layout_height="match_parent"
            android:id="@+id/container3"
            android:layout_toRightOf="@id/container2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/support_name"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="55px"
                    android:gravity="right" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:gravity="right">

                    <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone_icon"
                        android:id="@+id/callButton"
                        android:background="#FFFFFF" />

                    <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textButton"
                        android:src="@mipmap/message_icon"
                        android:background="#ffffff" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"

                        android:visibility="gone"
                        android:textColor="#000000" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>